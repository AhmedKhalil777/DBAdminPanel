@{
    ViewData["Title"] = "DB Admin Panel";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 300px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
            padding: 20px;
        }
        .main-content {
            margin-left: 300px;
            padding: 20px;
            height: 100vh;
            overflow-y: auto;
        }
        .tree-item {
            cursor: pointer;
            padding: 8px;
            border-radius: 4px;
            margin: 2px 0;
        }
        .tree-item:hover {
            background-color: #e9ecef;
        }
        .tree-item.active {
            background-color: #0d6efd;
            color: white;
        }
        .tree-group {
            margin: 10px 0;
        }
        .tree-group-header {
            font-weight: bold;
            color: #495057;
            margin-bottom: 5px;
            padding: 5px;
            background-color: #e9ecef;
            border-radius: 4px;
        }
        .tree-children {
            margin-left: 20px;
        }
        .loading {
            text-align: center;
            padding: 20px;
        }
        .pagination {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>DB Admin Panel</h4>
        <div id="sidebarContent">
            <div class="loading">Loading metadata...</div>
        </div>
    </div>
    
    <div class="main-content">
        <div id="mainContent">
            <h1>Welcome to DB Admin Panel</h1>
            <p>Select an entity from the sidebar to view and manage data.</p>
        </div>
    </div>

    <!-- Create/Edit Modal -->
    <div class="modal fade" id="entityModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Create Entity</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="saveEntity()">Save</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let allMetadata = null;
        let currentEntity = null;
        let currentPage = 1;
        let pageSize = 10;
        let isEditMode = false;

        // Load metadata on page load
        async function loadMetadata() {
            try {
                const response = await fetch('/DBAdminPanel/api/metadata');
                if (!response.ok) throw new Error('Failed to load metadata');
                allMetadata = await response.json();
                renderSidebar();
            } catch (error) {
                document.getElementById('sidebarContent').innerHTML = 
                    `<div class="alert alert-danger">Failed to load metadata: ${error.message}</div>`;
            }
        }

        // Group entities by DbContext
        function groupByDbContext(entities) {
            const grouped = {};
            entities.forEach(entity => {
                const dbContext = entity.dbContextName || 'Unknown';
                if (!grouped[dbContext]) {
                    grouped[dbContext] = [];
                }
                grouped[dbContext].push(entity);
            });
            return grouped;
        }

        // Render sidebar tree
        function renderSidebar() {
            if (!allMetadata || allMetadata.length === 0) {
                document.getElementById('sidebarContent').innerHTML = 
                    '<div class="alert alert-info">No entities found</div>';
                return;
            }

            const grouped = groupByDbContext(allMetadata);
            let html = '';

            Object.keys(grouped).sort().forEach(dbContext => {
                html += `<div class="tree-group">`;
                html += `<div class="tree-group-header">${dbContext}</div>`;
                html += `<div class="tree-children">`;
                
                grouped[dbContext].forEach(entity => {
                    html += `<div class="tree-item" onclick="selectEntity('${entity.name}')">${entity.name}</div>`;
                });
                
                html += `</div></div>`;
            });

            document.getElementById('sidebarContent').innerHTML = html;
        }

        // Select entity and load data
        async function selectEntity(entityName) {
            // Update active state
            document.querySelectorAll('.tree-item').forEach(item => {
                item.classList.remove('active');
                if (item.textContent.trim() === entityName) {
                    item.classList.add('active');
                }
            });

            // Find entity metadata - need to fetch full metadata
            try {
                const response = await fetch(`/DBAdminPanel/api/metadata/${entityName}`);
                if (!response.ok) throw new Error('Failed to load entity metadata');
                currentEntity = await response.json();
            } catch (error) {
                // Fallback to basic metadata
                currentEntity = allMetadata.find(e => e.name === entityName);
            }
            
            if (!currentEntity) return;

            currentPage = 1;
            await loadEntityData();
        }

        // Load entity data with pagination
        async function loadEntityData(page = 1) {
            if (!currentEntity) return;

            currentPage = page;
            const skip = (page - 1) * pageSize;
            
            try {
                // For now, we'll load all and paginate client-side
                // In production, you'd want server-side pagination
                const response = await fetch(`/DBAdminPanel/${currentEntity.name}/api`);
                if (!response.ok) throw new Error('Failed to load data');
                const allData = await response.json();
                
                const totalItems = allData.length;
                const totalPages = Math.ceil(totalItems / pageSize);
                const paginatedData = allData.slice(skip, skip + pageSize);

                renderTable(paginatedData, totalItems, totalPages);
            } catch (error) {
                document.getElementById('mainContent').innerHTML = 
                    `<div class="alert alert-danger">Failed to load data: ${error.message}</div>`;
            }
        }

        // Render table with pagination
        function renderTable(data, totalItems, totalPages) {
            if (!currentEntity) return;

            let html = `<h2>${currentEntity.name}</h2>`;
            html += `<div class="mb-3">`;
            html += `<button class="btn btn-primary" onclick="showCreateForm()">Create New</button>`;
            html += `</div>`;

            if (data.length === 0) {
                html += `<div class="alert alert-info">No records found</div>`;
            } else {
                html += `<table class="table table-striped table-hover">`;
                html += `<thead><tr>`;
                currentEntity.properties.forEach(prop => {
                    html += `<th>${prop.name}</th>`;
                });
                html += `<th>Actions</th></tr></thead>`;
                html += `<tbody>`;

                data.forEach(item => {
                    html += `<tr>`;
                    currentEntity.properties.forEach(prop => {
                        const value = item[prop.name] ?? '';
                        html += `<td>${value}</td>`;
                    });
                    html += `<td>`;
                    html += `<button class="btn btn-sm btn-primary" onclick="editEntity('${item[currentEntity.keyProperty]}')">Edit</button> `;
                    html += `<button class="btn btn-sm btn-danger" onclick="deleteEntity('${item[currentEntity.keyProperty]}')">Delete</button>`;
                    html += `</td></tr>`;
                });

                html += `</tbody></table>`;

                // Pagination
                html += `<nav><ul class="pagination">`;
                html += `<li class="page-item ${currentPage === 1 ? 'disabled' : ''}">`;
                html += `<a class="page-link" href="#" onclick="loadEntityData(${currentPage - 1}); return false;">Previous</a>`;
                html += `</li>`;
                
                for (let i = 1; i <= totalPages; i++) {
                    html += `<li class="page-item ${i === currentPage ? 'active' : ''}">`;
                    html += `<a class="page-link" href="#" onclick="loadEntityData(${i}); return false;">${i}</a>`;
                    html += `</li>`;
                }
                
                html += `<li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">`;
                html += `<a class="page-link" href="#" onclick="loadEntityData(${currentPage + 1}); return false;">Next</a>`;
                html += `</li>`;
                html += `</ul></nav>`;
                const skip = (currentPage - 1) * pageSize;
                html += `<div class="text-muted">Showing ${skip + 1} to ${Math.min(skip + pageSize, totalItems)} of ${totalItems} entries</div>`;
            }

            document.getElementById('mainContent').innerHTML = html;
        }

        // Show create form
        function showCreateForm() {
            isEditMode = false;
            currentEntityData = null;
            document.getElementById('modalTitle').textContent = `Create ${currentEntity.name}`;
            renderForm();
            new bootstrap.Modal(document.getElementById('entityModal')).show();
        }

        // Edit entity
        async function editEntity(id) {
            isEditMode = true;
            try {
                const response = await fetch(`/DBAdminPanel/${currentEntity.name}/api/${id}`);
                if (!response.ok) throw new Error('Failed to load entity');
                currentEntityData = await response.json();
                document.getElementById('modalTitle').textContent = `Edit ${currentEntity.name}`;
                renderForm();
                new bootstrap.Modal(document.getElementById('entityModal')).show();
            } catch (error) {
                alert('Failed to load entity: ' + error.message);
            }
        }

        // Render form
        function renderForm() {
            const modalBody = document.getElementById('modalBody');
            let form = '<form id="entityForm">';
            
            currentEntity.properties.forEach(prop => {
                if (prop.isKey && isEditMode) {
                    form += `<input type="hidden" name="${prop.name}" value="${currentEntityData?.[prop.name] ?? ''}" />`;
                } else if (!prop.isKey) {
                    const value = currentEntityData?.[prop.name] ?? '';
                    const inputType = prop.inputType || 'text';
                    form += `<div class="mb-3">`;
                    form += `<label class="form-label">${prop.name}</label>`;
                    
                    if (inputType === 'checkbox') {
                        const checked = value === true || value === 'true' || value === 'True' ? 'checked' : '';
                        form += `<div class="form-check">`;
                        form += `<input type="checkbox" class="form-check-input" name="${prop.name}" ${checked} />`;
                        form += `<label class="form-check-label">${prop.name}</label>`;
                        form += `</div>`;
                    } else if (inputType === 'datetime-local') {
                        let dateValue = '';
                        if (value) {
                            const date = new Date(value);
                            if (!isNaN(date.getTime())) {
                                const year = date.getFullYear();
                                const month = String(date.getMonth() + 1).padStart(2, '0');
                                const day = String(date.getDate()).padStart(2, '0');
                                const hours = String(date.getHours()).padStart(2, '0');
                                const minutes = String(date.getMinutes()).padStart(2, '0');
                                dateValue = `${year}-${month}-${day}T${hours}:${minutes}`;
                            }
                        }
                        form += `<input type="datetime-local" class="form-control" name="${prop.name}" value="${dateValue}" />`;
                    } else if (inputType === 'date') {
                        let dateValue = '';
                        if (value) {
                            const date = new Date(value);
                            if (!isNaN(date.getTime())) {
                                const year = date.getFullYear();
                                const month = String(date.getMonth() + 1).padStart(2, '0');
                                const day = String(date.getDate()).padStart(2, '0');
                                dateValue = `${year}-${month}-${day}`;
                            }
                        }
                        form += `<input type="date" class="form-control" name="${prop.name}" value="${dateValue}" />`;
                    } else if (inputType === 'number') {
                        form += `<input type="number" class="form-control" name="${prop.name}" value="${value}" step="${prop.type.includes('decimal') || prop.type.includes('float') || prop.type.includes('double') ? 'any' : '1'}" />`;
                    } else {
                        form += `<input type="text" class="form-control" name="${prop.name}" value="${value}" />`;
                    }
                    
                    form += `</div>`;
                }
            });
            
            form += '</form>';
            modalBody.innerHTML = form;
        }

        // Save entity
        async function saveEntity() {
            const form = document.getElementById('entityForm');
            const formData = new FormData(form);
            const data = {};
            
            currentEntity.properties.forEach(prop => {
                if (prop.isKey && !isEditMode) return;
                
                const value = formData.get(prop.name);
                if (value === null || value === undefined) {
                    if (prop.inputType === 'checkbox') {
                        data[prop.name] = false;
                    }
                    return;
                }
                
                if (prop.inputType === 'checkbox') {
                    data[prop.name] = value === 'on' || value === true;
                } else if (prop.inputType === 'number') {
                    const numValue = prop.type.includes('decimal') || prop.type.includes('float') || prop.type.includes('double')
                        ? parseFloat(value)
                        : parseInt(value);
                    data[prop.name] = isNaN(numValue) ? null : numValue;
                } else {
                    data[prop.name] = value || null;
                }
            });
            
            try {
                const url = isEditMode 
                    ? `/DBAdminPanel/${currentEntity.name}/api/${currentEntityData[currentEntity.keyProperty]}`
                    : `/DBAdminPanel/${currentEntity.name}/api`;
                const method = isEditMode ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method: method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error('Failed to save: ' + errorText);
                }
                
                bootstrap.Modal.getInstance(document.getElementById('entityModal')).hide();
                await loadEntityData(currentPage);
            } catch (error) {
                alert('Failed to save entity: ' + error.message);
            }
        }

        // Delete entity
        async function deleteEntity(id) {
            if (!confirm('Are you sure you want to delete this entity?')) return;
            
            try {
                const response = await fetch(`/DBAdminPanel/${currentEntity.name}/api/${id}`, {
                    method: 'DELETE'
                });
                
                if (!response.ok) throw new Error('Failed to delete entity');
                await loadEntityData(currentPage);
            } catch (error) {
                alert('Failed to delete entity: ' + error.message);
            }
        }

        // Initialize
        loadMetadata();
    </script>
</body>
</html>
